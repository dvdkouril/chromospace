{
  "name": "chromospace",
  "version": "0.0.10",
  "author": "David Kou≈ôil <david.kouril@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "app": "npm run dev --workspace=app",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest --pool=forks",
    "typecheck": "tsc",
    "fix": "biome check --write ."
  },
  "files": ["dist"],
  "main": "./dist/chromospace.umd.cjs",
  "module": "./dist/chromospace.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/chromospace.js",
      "require": "./dist/chromospace.umd.cjs"
    }
  },
  "workspaces": ["app"],
  "devDependencies": {
    "@biomejs/biome": "1.8.2",
    "@types/chroma-js": "^2.4.4",
    "@types/node": "^20.14.8",
    "@types/three": "^0.165.0",
    "happy-dom": "^14.12.3",
    "jsdom": "^24.1.0",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vitest": "^1.6.0",
    "vitest-canvas-mock": "^0.3.3"
  },
  "dependencies": {
    "chroma-js": "^2.4.2",
    "gl-matrix": "^3.4.3",
    "n8ao": "^1.8.2",
    "postprocessing": "^6.35.5",
    "three": "^0.165.0"
  }
}
